<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ДТ Южный буг{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('resources/images/dt.png') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/datatables.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/font-awesome.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/daterangepicker.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/bootstrap-editable.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/featherlight.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/select2.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/select2-bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/bootstrap-table.min.css') }}">
            {#<link rel="stylesheet" type="text/css" href="{{ asset('resources/css/buttons.dataTables.min.css') }}">#}
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/bootstrap-datepicker3.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('resources/css/main.css') }}">
        {% endblock %}
        {% block jshead %}
            <script type="text/javascript" src="{{ asset('resources/js/jquery-3.2.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/moment-with-locales.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/daterangepicker.min.js') }}" charset="utf-8"></script>
            <script type="text/javascript" src="{{ asset('resources/js/datatables.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/bootstrap-editable.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/featherlight.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/sgdatatables/js/pipeline.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/select2.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/bootstrap-table.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('resources/js/bootstrap-datepicker.js') }}"></script>
            {#<script type="text/javascript" src="{{ asset('resources/js/dataTables.buttons.min.js') }}"></script>#}
            <script type="text/javascript" src="{{ asset('resources/js/main.js') }}"></script>
            <script type="text/javascript">
                var myApp;
                $().ready(function() {
                    myApp = myApp || (function () {
                        var pleaseWaitDiv = $('#pleaseWaitDialog');
                        return {
                            showPleaseWait: function() {
                                pleaseWaitDiv.modal('show');
                            },
                            hidePleaseWait: function () {
                                pleaseWaitDiv.modal('hide');
                            },
                        };
                    })();
                });
            </script>
        {% endblock %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            {% block mainmenu %}
                {% include '@App/Menu/mainMenu.html.twig' with {'show_user_info': true} %}
            {% endblock %}
            {% block mainmenu2 %}
            {% endblock %}
        </div>
        {% block menu_space %}
            <div class="content" style="height: 60px;"></div>
        {% endblock %}
        {% block content %}
        {% endblock %}
        {% block additional_content %}
            <div style="display: none;" class="modal fade" id="pleaseWaitDialog" role="dialog" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog" id="modal-wait-form">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>Processing...</h4>
                        </div>
                        <div class="modal-body">
                            <div class="progress progress-striped active">
                                <div class="bar" style="width: 100%;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block jsfooter %}{% endblock %}
    </body>
</html>